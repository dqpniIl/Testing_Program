<Page x:Class="Testing_Program.PageLog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Testing_Program"
      mc:Ignorable="d" 
      d:DesignHeight="658" d:DesignWidth="768"
      Title="PageLog">
    <Grid>
        <Label Content="Авторизация" HorizontalAlignment="Center" Margin="0,35,0,0" VerticalAlignment="Top" Height="129" Width="474" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="64" FontWeight="Bold" FontFamily="Playbill"/>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="74,178,0,0" VerticalAlignment="Top" Width="119" Height="38" FontSize="24" FontFamily="Showcard Gothic"/>
        <TextBox Name="tblogin" HorizontalAlignment="Center" Margin="0,221,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="620" Height="60" FontSize="36">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="74,301,0,0" VerticalAlignment="Top" Width="119" Height="38" FontSize="24" FontFamily="Showcard Gothic"/>
        <TextBox Name="tbpassword" HorizontalAlignment="Center" Margin="0,344,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="620" Height="60" FontSize="36">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <Button Name="btnLogin" Content="Войти" HorizontalAlignment="Center" Margin="0,473,0,0" VerticalAlignment="Top" Width="198" Height="72" FontSize="24" Foreground="White" Background="#FF0080FE" Click="btnLogin_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button Name="btnReg" HorizontalAlignment="Center" Margin="0,570,0,0" VerticalAlignment="Top" Height="31" Width="368" Background="{x:Null}"  FontSize="18" BorderBrush="{x:Null}" Click="btnReg_Click">
            <TextBlock Text="Если у вас нет аккаунта, зарегистрируйтесь" TextDecorations="Underline" Foreground="#FF8D8B8B"/>
        </Button>
    </Grid>
</Page>
