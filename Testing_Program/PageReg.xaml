<Page x:Class="Testing_Program.PageReg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Testing_Program"
      mc:Ignorable="d" 
      d:DesignHeight="658" d:DesignWidth="768"
      Title="PageReg">
    <Grid>
        <Label Content="Регистрация" HorizontalAlignment="Center" Margin="0,35,0,0" VerticalAlignment="Top" Height="129" Width="474" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="64" FontWeight="Bold" FontFamily="Playbill"/>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="74,153,0,0" VerticalAlignment="Top" Width="119" Height="38" FontSize="24" FontFamily="Showcard Gothic"/>
        <TextBox Name="tblogin" HorizontalAlignment="Center" Margin="0,196,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="620" Height="60" FontSize="36">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="74,276,0,0" VerticalAlignment="Top" Width="119" Height="38" FontSize="24" FontFamily="Showcard Gothic"/>
        <TextBox Name="tbpassword" HorizontalAlignment="Center" Margin="0,319,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="620" Height="60" FontSize="36">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <Button Name="btnReg" Content="Зарегистрироваться" HorizontalAlignment="Center" Margin="0,532,0,0" VerticalAlignment="Top" Width="242" Height="72" FontSize="24" Foreground="White" Background="#FF0080FE" Click="btnReg_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
        </Button>
        <Label Content="Повторите пароль" HorizontalAlignment="Left" Margin="74,410,0,0" VerticalAlignment="Top" Width="227" Height="38" FontSize="24" FontFamily="Showcard Gothic"/>
        <TextBox x:Name="tbPovtorpassword" HorizontalAlignment="Center" Margin="0,453,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="620" Height="60" FontSize="36">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <Button Name="btnBack" HorizontalAlignment="Left" VerticalAlignment="Top" Height="63" Width="67" Background="White" BorderBrush="White" Click="btnBack_Click">
            <Button.Content>
                <Image Source="/Resources/back.png" />
            </Button.Content>
        </Button>
    </Grid>
</Page>
