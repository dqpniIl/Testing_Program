<Page x:Class="Testing_Program.PageUchetnyaZapis"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Testing_Program"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageUchetnyaZapis">
    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid>
        <Label Content="Учетная запись" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalAlignment="Top" Height="40" Width="196" FontSize="24" FontWeight="Bold" Margin="64,3,0,0"/>
        <Label Content="Фамилия" HorizontalAlignment="Left" Margin="44,43,0,0" VerticalAlignment="Top" Width="138" FontSize="20"/>
        <TextBox Name="tbSurname" HorizontalAlignment="Left" Margin="44,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="236" Height="39" FontSize="20"/>
        <Label Content="Имя" HorizontalAlignment="Left" Margin="44,143,0,0" VerticalAlignment="Top" Width="138" FontSize="20"/>
        <TextBox Name="tbName" HorizontalAlignment="Left" Margin="44,180,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="236" Height="39" FontSize="20"/>
        <Label Content="Группа" HorizontalAlignment="Left" Margin="44,243,0,0" VerticalAlignment="Top" Width="138" FontSize="20"/>
        <TextBox x:Name="tbGroupe" HorizontalAlignment="Left" Margin="44,280,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="236" Height="39" FontSize="20"/>
        <Button Name="btnSave" Content="Сохранить" Background="LightGray" HorizontalAlignment="Left" Margin="85,336,0,0" VerticalAlignment="Top" Height="36" Width="154" FontSize="20" Click="btnSave_Click"/>
    </Grid>
</Page>
